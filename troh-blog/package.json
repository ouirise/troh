{
  "name": "troh-blog",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "deploy": "pnpm run build && wrangler pages deploy dist",
    
    "kv:create": "wrangler kv:namespace create BLOG_POSTS",
    "kv:list": "wrangler kv:key list --binding=BLOG_POSTS",
    "kv:get": "wrangler kv:key get posts --binding=BLOG_POSTS",
    "kv:delete": "wrangler kv:key delete posts --binding=BLOG_POSTS",
    
    "wrangler:dev": "wrangler pages dev",
    "wrangler:login": "wrangler login",
    "wrangler:tail": "wrangler tail"
  },
  "dependencies": {
    "@portabletext/react": "^3.0.11",
    "@sanity/client": "^6.10.0",
    "@sanity/image-url": "^1.0.2",
    "groq": "^3.23.4",
    "lucide-react": "^0.294.0",
    "next-sanity": "^12.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^6.20.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.24",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "vite": "^5.0.8",
    "wrangler": "^4.64.0"
  }
}
